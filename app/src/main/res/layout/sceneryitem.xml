<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/item1"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/particulars_select"
        android:focusable="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_select_true2">

            <ImageView
                android:id="@+id/image"
                android:layout_width="314dp"
                android:layout_height="184dp"
                android:src="@drawable/icon_error" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#60ffffff"
            android:gravity="center_vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="27dp"
                android:layout_marginStart="27dp"
                android:text="南花苗寨"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/tour_itemtitle_textsize" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item1_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#60ffffff"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="27dp"
            android:paddingRight="27dp">

            <TextView
                android:id="@+id/contentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="8"
                android:text="在凯莉洗马河车站乘坐开往雷山方向的班车，没小时一班无论世道。。"
                android:textSize="@dimen/tour_itemcontent_textsize" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>